@page
@model RazorCore.Pages.Products.IndexModel
@{
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10 text-end">
            <a asp-page="create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create a product</a>

        </div>
        <div class="col-10 text-start">
            <h2 class="text-primary">Products list</h2>
        </div>
    </div>
    <p class="mt-5 mb-2"><hr /></p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>Name</th>
                <th>Price</th>
                <th>Cateogry</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.products!)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                   <td>@(item.Category?.Name ?? "Not found")</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                         <a asp-page="Delete"  asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>          